{
  "image": "ghcr.io/scmlab/gcl-dev:latest",

  // if you want to always pull the latest image
  "initializeCommand": "docker pull ghcr.io/scmlab/gcl-dev:latest",

  // stop container when VS Code closes (instead of leaving it running)
  "shutdownAction": "stopContainer",

  // uncomment if git does not work correctly
  // "postStartCommand": "git config --global --add safe.directory '*'",

  "customizations": {
    "vscode": {
      // extensions to install in the container
      "extensions": [
        "haskell.haskell"
      ],
      // WARNING: If you change the settings, remember to rebuild the container.
      //          A mere restart might not take effect!
      "settings": {
        // to prevent VS Code from asking to open the parent folder when opening a subfolder of a git repo
        "git.openRepositoryInParentFolders": "always",

        // "haskell.manageHLS" should be set to "PATH".
        // The following configuration is a workaround for the issue:
        // https://github.com/haskell/vscode-haskell/issues/1332
        "haskell.manageHLS": "GHCup",
        "haskell.toolchain": {
          "ghc": null,
          "hls": null,
          "stack": null,
          "cabal": null
        },
        // disable automatic GHCup upgrade.
        "haskell.upgradeGHCup": false
      }
    }
  },
  // Some Haskell code requires locale settings to process non-ASCII characters.
  //"containerEnv": {
  //  "LC_ALL": "en_US.UTF-8"
  //}
}
